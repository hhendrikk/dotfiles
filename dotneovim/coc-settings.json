{
  "coc.preferences.extensionUpdateCheck": "daily",
  "coc.preferences.formatOnType": true,
  "diagnostic.displayByAle": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "html",
    "css",
    "scss",
    "javascript",
    "typescript",
    "vue",
    "go",
    "markdown",
    "json",
    "jsonc",
    "restclient"
  ],
  "eslint.autoFixOnSave": true,
  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"]
    }
  }
}
